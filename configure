#!/bin/bash

for dir in tools/*
do
if [[ -d ${dir} ]]
then
    source setup.py install
else
    echo notadir
    echo ${dir}
fi
done
cd $PWD/tools/pyddoz
./setup install
cd $PWD/tools/synFlood
./setup install
cd $PWD/tools/udpdos
./setup install
